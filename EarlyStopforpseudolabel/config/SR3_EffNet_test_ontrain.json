        "lambda_Seg": 1.0,
        "lambda_wce": 1.0,
        "lambda_dice": 1.0,
        "niter": 250,
        "niter_decay": 9750,
        "fineSize": 192,
        "optimizer": "adam",
        "beta1": 0.5,
        "lr": 0.0003,
        "adam_weight_decay": 0.00003,
        "epoch_count": 1,
