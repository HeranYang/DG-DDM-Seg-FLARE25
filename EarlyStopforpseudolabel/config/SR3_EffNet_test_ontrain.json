        "results": "results",
        "checkpoint": "checkpoint"
    },
    "train": {
        "n_iter": 1000000,
        "n_epoch": 2000,
        "val_freq": 1, // epoch
        "save_checkpoint_freq": 1, //epoch
        "print_freq": 500, //iter
        "optimizer": {
            "type": "adam",
            "lr": 3e-6
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "SR3 for MRI"
    }
